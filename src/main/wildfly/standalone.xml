<subsystem xmlns="urn:jboss:domain:security:1.0">
    <security-domains>
        <security-domain name="mangaSecurityDomain" cache-type="default">
            <authentication>
                <login-module code="Database" flag="required">
                    <module-option name="dsJndiName" value="java:/MangaDS"/>
                    <module-option name="principalsQuery" value="select password from Account where username=?"/>
                    <module-option name="rolesQuery" value="select role, 'Roles' from Account where username=?"/>
                    <module-option name="hashAlgorithm" value="SHA-256"/>
                    <module-option name="hashEncoding" value="base64"/>
                </login-module>
            </authentication>
        </security-domain>
    </security-domains>
</subsystem>

